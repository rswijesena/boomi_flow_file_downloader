{
    "compilerOptions": {
      "outDir": "./build/",
      "target": "es5",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext",
        "es2015"
      ],
      "sourceMap": true,
      "allowJs": true,
      "skipLibCheck": false,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "react"
    },
    "include": [
      "src/**/*"
      
    ]
  }
  